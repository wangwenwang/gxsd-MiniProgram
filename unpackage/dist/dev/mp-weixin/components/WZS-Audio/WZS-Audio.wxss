.audio-page {
  width: 600rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 3rpx 3rpx 6rpx #ccc;
}
.audio-page .box-left {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  display: flex;
}
.audio-page .box-left .box-img {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}
.audio-page .box-left .page-btn {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 3;
}
.audio-page .box-left .page-btn image {
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}
.audio-page .box-content {
  width: 450rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.audio-page .box-content .content-name {
  width: 100%;
  display: -webkit-box;
  /* 弹性盒模型 */
  -webkit-box-orient: vertical;
  /* 元素垂直居中*/
  -webkit-line-clamp: 1;
  /*  文字显示的行数*/
  overflow: hidden;
  /* 超出隐藏 */
}
.audio-page .box-content .progress {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.audio-page .box-content .progress slider {
  width: 80%;
}

