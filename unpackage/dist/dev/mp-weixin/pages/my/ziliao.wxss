.content {
  padding: 0px 15px;
  box-sizing: border-box;
}
.content .cont {
  display: flex;
  justify-content: space-between;
}
.content .cont .lefts {
  width: 50%;
  height: 60px;
  line-height: 60px;
  font-size: 16px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #666666;
}
.content .cont .rights {
  display: flex;
  text-align: right;
}
.content .cont .rights image {
  width: 40px;
  height: 40px;
  border-radius: 40px;
  margin-top: 10px;
  margin-right: 10px;
}
.content .cont .rights input {
  text-align: right;
  font-size: 16px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #999999;
  height: 60px;
  line-height: 60px;
}
.content .btn {
  height: 48px;
  background: linear-gradient(180deg, #8ACCF1 0%, #4BB4EF 100%);
  box-shadow: 0px 4px 4px 1px rgba(11, 124, 187, 0.24);
  border-radius: 90px 90px 90px 90px;
  border-radius: 48px;
  text-align: center;
  font-size: 16px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 48px;
  margin-top: 50px;
}

