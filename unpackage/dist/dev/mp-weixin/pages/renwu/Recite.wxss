.content {
  padding: 10px 0px;
  box-sizing: border-box;
}
.content .head {
  height: 25px;
  font-size: 18px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #4BB4EF;
  line-height: 25px;
  margin-bottom: 16px;
}
.content .cont {
  padding: 20px;
  box-sizing: border-box;
  font-size: 16px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 26px;
}
.content .btn {
  position: fixed;
  bottom: 0px;
  width: 100vw;
  height: 200px;
  background: #FFFFFF;
  border-radius: 0px 0px 0px 0px;
  padding: 10px 16px;
  box-sizing: border-box;
}
.content .btn .luyin {
  background: #F2F2F2;
  border-radius: 8px 8px 8px 8px;
  padding: 15px 20px;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 40px;
}
.content .btn .luyin .tit {
  height: 20px;
  font-size: 14px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 20px;
  margin-right: 20px;
}
.content .btn .luyin image {
  width: 20px;
  height: 20px;
}
.content .btn .back {
  margin: 0 auto;
  width: 80%;
  height: 40px;
  border-radius: 90px 90px 90px 90px;
  border: 1px solid #4BB4EF;
  box-sizing: border-box;
  text-align: center;
  font-size: 14px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #4BB4EF;
  line-height: 40px;
}
.content .btn .miao {
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}
.content .btn .miao image {
  width: 20px;
  height: 20px;
  margin: 0 10px;
}
.content .btn .miao .times {
  height: 20px;
  font-size: 14px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 20px;
}
.content .btn .btns {
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.content .btn .btns .box {
  margin-top: 20px;
}
.content .btn .btns .box image {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  margin-bottom: 14px;
}
.content .btn .btns .box view {
  height: 20px;
  font-size: 14px;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #333333;
  line-height: 20px;
}
.content .btn .btns .boxs image {
  width: 60px;
  height: 60px;
  border-radius: 8px;
  margin-bottom: 14px;
}
.content .btn .btns .boxs view {
  height: 20px;
  font-size: 14px;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #333333;
  line-height: 20px;
}

