.content {
  padding: 10px 15px;
  box-sizing: border-box;
}
.content .head {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}
.content .head .name {
  height: 25px;
  font-size: 16px;
  font-family: PingFang SC-Heavy, PingFang SC;
  font-weight: 800;
  color: #4BB4EF;
  line-height: 25px;
}
.content .head .times {
  height: 25px;
  font-size: 18px;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #4BB4EF;
  line-height: 25px;
}
.content .cont {
  padding: 20px;
  box-sizing: border-box;
}
.content .cont .title {
  margin-bottom: 20px;
  font-size: 16px;
  font-family: PingFang SC-Heavy, PingFang SC;
  font-weight: 800;
  color: #333333;
  line-height: 19px;
}
.content .cont .xuanxiang .box {
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 20px;
  background: #F2F2F2;
  border-radius: 8px 8px 8px 8px;
  display: flex;
  justify-content: space-between;
}
.content .cont .xuanxiang .box .boxs {
  font-size: 14px;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #333333;
}
.content .cont .xuanxiang .boxcuo {
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 20px;
  background: #D11111;
  border-radius: 8px 8px 8px 8px;
  display: flex;
  justify-content: space-between;
}
.content .cont .xuanxiang .boxcuo .boxs {
  font-size: 14px;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.content .cont .xuanxiang .boxdui {
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 20px;
  background: #0CBC48;
  border-radius: 8px 8px 8px 8px;
  display: flex;
  justify-content: space-between;
}
.content .cont .xuanxiang .boxdui .boxs {
  font-size: 14px;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.content .cont .xuanxiang textarea {
  background: #F2F2F2;
  border-radius: 8px 8px 8px 8px;
  padding: 20px;
  box-sizing: border-box;
  font-size: 14px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #999999;
  line-height: 16px;
  width: 100%;
}
.content .cont .xuanxiang .tian input {
  padding: 20px;
  box-sizing: border-box;
  height: 60px;
  border-radius: 8px;
  font-size: 14px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #999999;
  line-height: 20px;
  margin-bottom: 20px;
}
.content .btn {
  position: fixed;
  bottom: 20px;
  left: 10vw;
}
.content .btn .btnone {
  width: 80vw;
  height: 40px;
  background: #4BB4EF;
  border-radius: 90px 90px 90px 90px;
