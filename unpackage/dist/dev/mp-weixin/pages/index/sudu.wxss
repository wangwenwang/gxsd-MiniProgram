.content {
  padding: 20px 15px;
  box-sizing: border-box;
}
.content .title {
  height: 20px;
  font-size: 14px;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #666666;
  line-height: 20px;
  margin-bottom: 20px;
}
.content .cont {
  position: absolute;
  width: 92%;
  height: 64px;
  margin-top: -25px;
}
.content .cont .tiao {
  height: 50px;
  position: relative;
}
.content .cont .box {
  display: flex;
  justify-content: space-between;
  margin-top: -170px;
}
.content .cont .box .yuan {
  text-align: center;
  z-index: 100;
}
.content .cont .box .yuan .xuan {
  width: 16px;
  height: 16px;
  background: #4BB4EF;
  border-radius: 16px;
  margin-bottom: 8px;
  margin: 0 auto;
}
.content .cont .box .yuan .xuanze {
  width: 16px;
  height: 16px;
  background: #aae0ff;
  border: 4px solid #7878ff;
  box-sizing: border-box;
  border-radius: 16px;
  margin-bottom: 8px;
  margin: 0 auto;
}
.content .cont .box .yuan .num {
  height: 17px;
  font-size: 12px;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  color: #000000;
  line-height: 17px;
}
.content .jiajian {
  padding: 10px;
  box-sizing: border-box;
  width: 80vw;
  height: 60px;
  margin: 0 auto;
  background: linear-gradient(180deg, #79ABF8 0%, #3D95E7 100%);
  box-shadow: 0px 4px 7px 1px rgba(23, 99, 214, 0.4);
  border-radius: 12px 12px 12px 12px;
  display: flex;
  justify-content: space-between;
}
.content .jiajian .one {
  width: 15%;
  height: 40px;
  line-height: 40px;
  color: #FFFFFF;
  text-align: center;
}
.content .jiajian .two {
  width: 70%;
  height: 40px;
  background: #FFFFFF;
  box-shadow: 0px 2px 4px 1px rgba(0, 40, 63, 0.15);
  border-radius: 12px 12px 12px 12px;
  line-height: 40px;
  text-align: center;
  font-size: 18px;
  font-family: PingFang SC-Heavy, PingFang SC;
  font-weight: 800;
  color: #333333;
}
.content .jiajian .three {
  width: 15%;
  height: 40px;
  color: #FFFFFF;
  line-height: 40px;
  text-align: center;
}
.content .btn {
  margin-top: 100px;
  height: 48px;
  background: linear-gradient(180deg, #8ACCF1 0%, #4BB4EF 100%);
  box-shadow: 0px 4px 4px 1px rgba(11, 124, 187, 0.24);
  border-radius: 90px 90px 90px 90px;
  font-size: 16px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 48px;
  text-align: center;
}

